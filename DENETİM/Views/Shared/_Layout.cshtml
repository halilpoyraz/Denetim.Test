                </ul>
            </li>            
        </ul>
        
    </div>
    <div class="content">
        @RenderBody()
    </div>

    <script>
        $('.menubtn').on('click', function () {
            $('.sidebar').toggleClass('open');
            $('.content').toggleClass('contenta');
        })
        $(".submenu").click(function () {
            $(this).children("ul").slideToggle();
        })
    </script>
    
</body>
</html>
