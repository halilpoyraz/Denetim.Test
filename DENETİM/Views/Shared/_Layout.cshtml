<body>
    
    <div class="nav">
        <div class="menubtn">           
                <img src="~/Content/img/menu.png" class="menu-bar" />         
        </div>
        <div class="logo">
            <img src="~/Content/img/TSE.png" />
        </div>
    </div>
    <div class="sidebar">
        @*<h2>MENÜ</h2>*@
        <ul>
            <li><a href="~/Home/AfterLogin">Ana Sayfa</a></li>                   
            <li><a href="#">Listeler</a></li>
            <li class="submenu">
                <a href="#">Standart Liste Bilgileri<span class="btn-down"></span></a>
                <ul>
                    <li><a href="~/Admin/ListeBilgileriBolum">Bölüm Listesi</a></li>
                    <li><a href="~/Admin/ListeBilgileriBaslik">Başlık Listesi</a></li>
                    <li><a href="~/Admin/ListeBilgileriBaslikAlt">Alt Başlık Listesi</a></li>
                </ul>
            </li> 
            <li><a href="#">TS- 13298</a></li>
            <li class="submenu"><a href="#">Genel Liste Bilgileri<span class="btn-down"></span></a>
