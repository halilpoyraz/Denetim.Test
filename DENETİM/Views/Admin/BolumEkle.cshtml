@model DENETİM.BOLUM

@{
    ViewBag.Title = "BolumEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bölüm Ekle</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>BOLUM</legend>

        <div class="editor-label">
            <span>Bölüm No</span>
            @*@Html.LabelFor(model => model.BOLUM_NO)*@
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BOLUM_NO)
            @Html.ValidationMessageFor(model => model.BOLUM_NO)
        </div>

        <div class="editor-label">
            <span>Bölüm Adı</span>
            @*@Html.LabelFor(model => model.BOLUM_AD)*@
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.BOLUM_AD)
            @Html.ValidationMessageFor(model => model.BOLUM_AD)
        </div>

        <p>
            <input type="submit" value="Kaydet" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Listeye Dön", "ListeBilgileriBolum")
</div>

