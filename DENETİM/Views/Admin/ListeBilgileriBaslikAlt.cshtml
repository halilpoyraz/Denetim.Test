@model IEnumerable<DENETİM.BASLIKALT>
@using GridMvc.Html
@{
    ViewBag.Title = "ListeBilgileriBaslikAlt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")"></script>
<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>

<h2>Alt Başlık Liste Bilgileri</h2>

<div style="width:500px; align-content:center">
    <div class="insert">
        <a style="color:white;" href="@Url.Action("BaslikAltEkle", "Admin")"><span>Yeni Alt Başlık</span></a>
    </div>
    @Html.Grid(Model).Columns(columns =>
                    {
                        columns.Add(c => c.BASLIKALT_NO).Titled("Başlık Alt No").Filterable(true);
                        columns.Add(c => c.BASLIKALT_AD).Titled("Başlık Alt Ad").Filterable(true);
                        columns.Add(c => c.ID).Titled("ID");
                        columns.Add().Titled("Düzenle")
                            .Encoded(false)
                            .Sanitized(false)
                            .RenderValueAs(d => @<b>@Html.ActionLink("Düzenle", "BaslikAltDuzenle", new { id = d.ID })</b>);
                        columns.Add().Titled("Sil")
                            .Encoded(false)
                            .Sanitized(false)
                            .RenderValueAs(d => @<b>@Html.ActionLink("Sil", "BaslikAltSil", new { id = d.ID })</b>);
                    }).WithPaging(3).Sortable(true)
</div>