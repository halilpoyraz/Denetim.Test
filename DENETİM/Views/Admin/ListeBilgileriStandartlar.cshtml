@model IEnumerable<DENETİM.DSTANDARTLAR>
@using GridMvc.Html
@{
    ViewBag.Title = "ListeBilgileriStandartlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")"></script>
<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>

<h2>Atıf Yapılan Standartlar</h2>

<div style="width:500px; align-content:center">
    <div class="insert">
        <a style="color:white;" href="@Url.Action("StandartEkle", "Admin")"><span>Yeni Standart</span></a>
    </div>
    @Html.Grid(Model).Columns(columns =>
                    {
                        columns.Add(c => c.STANDART_NO).Titled("TS No").Filterable(true);
                        columns.Add(c => c.STANDART_AD).Titled("Standart Ad TR").Filterable(true);
                        columns.Add(c => c.STANDART_NO2).Titled("ISO/OEC No").Filterable(true);
                        columns.Add(c => c.STANDART_AD2).Titled("Standart Ad ING").Filterable(true);
                        columns.Add(c => c.ID).Titled("ID");
                        columns.Add().Titled("Düzenle")
                            .Encoded(false)
                            .Sanitized(false)
                            .RenderValueAs(d => @<b>@Html.ActionLink("Düzenle", "StandartDuzenle", new { id = d.ID })</b>);
                        columns.Add().Titled("Sil")
                            .Encoded(false)
                            .Sanitized(false)
                            .RenderValueAs(d => @<b>@Html.ActionLink("Sil", "StandartSil", new { id = d.ID })</b>);
                    }).WithPaging(3).Sortable(true)
</div>
