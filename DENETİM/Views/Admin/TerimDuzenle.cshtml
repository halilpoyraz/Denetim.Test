@model DENETİM.TERIMLER

@{
    ViewBag.Title = "TerimDuzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TerimDuzenle</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>TERIMLER</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            <span>Terim</span>
            @*@Html.LabelFor(model => model.TERIM_AD)*@
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TERIM_AD)
            @Html.ValidationMessageFor(model => model.TERIM_AD)
        </div>

        <div class="editor-label">
            <span>Tanımı</span>
            @*@Html.LabelFor(model => model.TERIM_TANIM)*@
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TERIM_TANIM)
            @Html.ValidationMessageFor(model => model.TERIM_TANIM)
        </div>

        <p>
            <input type="submit" value="Kaydet" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Listeye DÖn", "ListeBilgileriTerimler")
</div>
