@model DENETİM.KATEGORI

@{
    ViewBag.Title = "Kategori Duzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>KategoriDuzenle</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset class="fieldset">
        <legend>KATEGORI</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @*@Html.LabelFor(model => model.KATEGORI_TIP)*@
            <span>Kategori Adı</span>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.KATEGORI_TIP)
            @Html.ValidationMessageFor(model => model.KATEGORI_TIP)
        </div>

        <p>
            <input type="submit" value="Kaydet" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Listeye Dön", "ListeBilgileriKategori")
</div>

